pkgname="linkie"
pkgver="1.1"
pkgrel="1"
pkgdesc="symlink everything from \$LINKIE_REPO into \$LINKIE_PATH."
arch=("any")
url="https://github.com/draumaz/linkie"
license=("GPL")
makedepends=("git")

package() {
  cd ../..
  
  mv -v "./linkie.sh" "./linkie"
  chmod -v +x "${pkgname}"

  install -v -dm755 "${pkgdir}/usr/bin"
  install -v -dm755 "${pkgdir}/usr/share/man/man1"
  
  mv -v "${pkgname}" "${pkgdir}/usr/bin"
  mv -v "${pkgname}.1" "${pkgdir}/usr/share/man/man1"
}
